{% extends 'base.html.twig' %}

{% block title %}{{title_page}}{% endblock %}

{% block body %}

<div class="custom-container">
    <h1 class="uk-animation-slide-right padding-top-large">Classement par thème:</h1>
    <div class="separator" id="alert-javascript">{% include "alertflash/flash_message.html.twig" %}</div>
</div>



<div class="ui container">

    {# On vérifie que le formulaire existe avant de l'afficher #}
    {% if formAddCategory is defined %}
    <h1 class="uk-animation-slide-down">{{title_page}}</h1>
    
    {{ form_start(formAddCategory, {'attr': {'class': 'ui form'}}) }}
    {# la class field pour afficher les erreurs #}
    <div class="{% if formAddCategory.nameCategory.vars.errors|length > 0 %}field {% endif %}">
        {{ form_row(formAddCategory.nameCategory) }}
        {{ form_row(formAddCategory.theme) }}
    </div>
    <div class="field">
        <button name="serviceForm" type="submit" class="ui-button ui-widget ui-corner-all">
            <span class="ui-icon ui-icon-check"></span> Valider
        </button>
    </div>
    {{ form_end(formAddCategory) }}
    {% endif %}

    {% if courses | default %}
    <h1 class="uk-animation-slide-left">{{title_page}}</h1>
    {# On affiche les courses touvées #}
    <div class="ui list uk-animation-fade">
        {% for course in courses %}
        <div class="item">
            <i class="folder icon"></i>
            <div class="content">
                <div class="header"> <a href="{{ path('detail_course', { 'id': course.id }) }}">{{
                        course.nameCourse}}</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {# {{ dump(app.user.roles) }} #}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('new_category') }}" class="ui button">
        Ajouter une catégorie
    </a>
    {% endif %}
</div>
{% endblock %}