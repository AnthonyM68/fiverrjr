{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}

{% block body %}
<div class="ui middle aligned center aligned grid">

    <div class="ui segment login-register" style="width:350px">

        <h2 class="ui teal image header">
            <img src="https://fomantic-ui.com/examples/assets/images/logo.png" class="image">
            <div class="content">
                Enregistrement
            </div>
        </h2>

        {{ form_start(registrationForm, {'attr': {'class': 'ui large form', 'novalidate': 'novalidate'}}) }}
        <div class="ui stacked segment">
            <div class="field">
                {{ form_errors(registrationForm.username) }}
                <div class="ui right icon input floating-label">
                    <i class="user icon"></i>
                    {{ form_widget(registrationForm.username) }}
                    {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
                </div>
            </div>
            <div class="field">
                {{ form_errors(registrationForm.email) }}
                <div class="ui right icon input floating-label">
                    <i class="envelope icon"></i>
                    {{ form_widget(registrationForm.email) }}
                    {{ form_label(registrationForm.email) }}
                </div>
            </div>
            <div class="field">
                {{ form_errors(registrationForm.plainPassword.first) }}
                <div class="ui right icon input floating-label">
                    <i class="lock icon"></i>
                    {{ form_widget(registrationForm.plainPassword.first) }}
                    {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                </div>
                {{ form_errors(registrationForm.plainPassword.second) }}
                <div class="ui right icon input floating-label">
                    <i class="lock icon"></i>
                    {{ form_widget(registrationForm.plainPassword.second) }}
                    {{ form_label(registrationForm.plainPassword.second, 'Répétez mot de passe') }}
                </div>
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}
            <div class="ui message field fluid large teal center aligned">
                <div class="ui checkbox checkbox-container">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'Acceptez les termes') }}
                </div>
            </div>
            <div class="field">
                <button type="submit" class="ui fluid large teal submit button">S'enregistrer</button>
            </div>
            <div class="ui message field center aligned">
                Déjà inscrit? <a href="{{ path('login') }}">Connectez-vous</a>
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}