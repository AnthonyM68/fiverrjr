{% extends 'base.html.twig' %}

{% block title %}Hello CourseController!{% endblock %}

{% block body %}

{% if formAddCourse|default %}

{{ form_start(formAddCourse, {'attr': {'class': 'ui form'}}) }}

<div class="field">
    {{ form_row(formAddCourse.nameCourse) }}
</div>
<div class="field">
    {{ form_row(formAddCourse.category) }}
</div>

<div class="field">
    {{ form_row(formAddCourse.submit) }}
</div>

{{ form_end(formAddCourse) }}
{% endif %}




{% if courses | default %}

<div class="ui list">
    {% for course in courses %}
    <div class="item">
        <i class="folder icon"></i>
        <div class="content">
            <div class="header">{{ course.nameCourse}}</div>
            {# <div class="description">Source files for project</div> #}
        </div>
    </div>
    {% endfor %}
</div>
<a href="{{ path('new_course') }}" class="ui button">
    Ajouter une sous-cat√©gorie
</a>
{% endif %}

{% endblock %}