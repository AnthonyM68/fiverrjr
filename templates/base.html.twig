<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {{ encore_entry_link_tags('jquery_ui_theme') }}
    {{ encore_entry_link_tags('jquery_structure') }}
    {{ encore_entry_link_tags('uikit_css') }}
    {{ encore_entry_link_tags('carousel') }}
    {{ encore_entry_link_tags('slick-carousel-css') }}
    {{ encore_entry_link_tags('slick-carousel-theme-css') }}

    {# {{ encore_entry_link_tags('semantic_css') }} #}
    {{ encore_entry_link_tags('semantic_less') }}
    {{ encore_entry_link_tags('app_styles') }}
    {% endblock %}
    {# <script src="{{ asset('tarteaucitron.js')}}"></script> #}
</head>

<body>
    <header>
        {# On utilise un controller pour rendre un form search dans la navbar #}
        {{ render(controller('App\\Controller\\NavbarController::index')) }}
    </header>

    <article>
        <div class="separator"></div>
        <div class="ui container">
            <div class="ui segment" id="search-results-container" style="display: none;">
                <div class="ui grid">
                    <div class="sixteen wide column search-results"
                        style="display: flex; justify-content: space-between; align-items: center;">
                        <h2 id="search-results-title">Résultats de la recherche avancée</h2>
                        <button class="ui button primary" id="close-results">Fermer</button>
                    </div>

                    <div class="sixteen wide column search-results">
                        <div id="search-results-navbar"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarteaucitron -->
        <div id="tarteaucitron"></div>

        {% block body %} {% endblock %}
    </article>


    <footer>{% include 'footer/footer.html.twig' %}</footer>

    {% block javascripts %}

    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('semantic') }}

    {{ encore_entry_script_tags('jquery_ui') }}
    {{ encore_entry_script_tags('uikit') }}
    {{ encore_entry_script_tags('uikit-icons') }}
    {{ encore_entry_script_tags('slick-carousel') }}

    {{ encore_entry_script_tags('messageFlash') }}
    {{ encore_entry_script_tags('CarouselComponent') }}
    {{ encore_entry_script_tags('StickyFooter') }}
    {# {{ encore_entry_script_tags('tarteaucitron') }} #}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
   
            if (typeof tarteaucitron === 'object') {

                tarteaucitron.init({
                    
                    "privacyUrl": "", /* URL de la politique de confidentialité */
                    "hashtag": "#tarteaucitron", /* Ouvrir le panneau avec ce hashtag */
                    "cookieName": "tarteaucitron", /* Nom du cookie */
                    "orientation": "bottom", /* Position de la bannière (top - bottom) */
                    "showAlertSmall": true, /* Montrer la petite bannière en bas à droite */
                    "cookieslist": true, /* Afficher la liste des cookies */
                    "adblocker": false, /* Montrer un avertissement si un bloqueur de publicités est détecté */
                    "AcceptAllCta": true, /* Montrer le bouton accepter tout lorsque highPrivacy est activé */
                    "highPrivacy": false, /* Désactiver le consentement automatique */
                    "handleBrowserDNTRequest": false, /* Si Do Not Track == 1, interdire tout */
                    "removeCredit": false, /* Supprimer le lien de crédit */
                    "moreInfoLink": true, /* Montrer le lien pour plus d'infos */
                    "useExternalCss": false, /* Si faux, le fichier tarteaucitron.css sera chargé */
                    "readmoreLink": "/cookiespolicy" /* Changer le lien de lecture plus par défaut */
                });
        
            } else {
                console.log('Tarteaucitron is defined');
            }
        });

    </script>
    {% endblock %}
</body>

</html>