{% extends 'base.html.twig' %}

{% block body %}
<style>
    .ui.container.cart {
        padding-top: 10vh;
        max-width: 100%;
        min-height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }
    .ui.items.cart {
        padding-top:10vh;
    }
    .ui.items.cart {
        width: 80%; 
        /* display: flex;
        flex-wrap: wrap; 
        justify-content: space-between; */
    }

    .ui.items .item {
        flex: 1 1 calc(50% - 20px); 
        margin-bottom: 20px; 
    }

    .cart-total {
        align-self: flex-end; 
        text-align: right;
        margin-top: 20px;
    }

    .cart-total h3 {
        font-size: 24px;
    }

    .ui.primary.button {
        margin-top: 10px;
        width: auto;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .ui.items .item {
            flex-direction: column;
            text-align: center;
            width: 100%;
        }

        .ui.small.image {
            margin-bottom: 10px;
        }

        .ui.container.cart {
            padding-top: 5vh;
        }

        .cart-total {
            width: 100%;
            text-align: center;
            align-self: center;
        }

        .ui.labeled.input {
            width: 100%;
            justify-content: center;
            margin-top: 10px;
        }

        .ui.primary.button {
            margin-top: 10px;
            width: 100%;
        }
    }

    @media (max-width: 480px) {
        .ui.items .item {
            font-size: 14px;
        }

        .cart-total h3 {
            font-size: 18px;
        }

        .ui.small.image {
            width: 100%;
            height: auto;
        }
    }
</style>


<div class="ui container cart">

    {% if data | default %}
        <div class="ui items cart">
            <h1 class="padding-bottom-extra-large">Récapitulatif de votre panier</h1>
            {% for product in data %}

            <div class="item">
                <div class="ui small image">
                    <img src="{{ product.serviceItem.picture }}" alt="Image produits {{ product.serviceItem.title }}">
                </div>
                <div class="content">
                    <a class="header">{{ product.serviceItem.title }}</a>
                    <div class="meta">
                        <span class="price">{{ product.serviceItem.price }}€</span>
                    </div>

                    <div class="extra">
                        <div class="ui right floated">
                            <div class="ui labeled input">
                                {# <div class="ui label">Quantité</div> #}
                                {# <input type="number" value="{{ product.quantity }}"> #}
                            </div>
                            <a href="{{ path('delete_service_cart', {id: product.serviceItem.id}) }}"
                                class="ui primary button">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="cart-total">
            <h3>Total: {{ total }}€</h3>
            {% if stripe_public_key| default %}
            <button class="ui button green" id="checkout-button" data-public-key="{{ stripe_public_key }}"
                data-create-checkout="{{ path('app_stripe_charge') }}">Payer</button>
            {% endif %}
        </div>
    {# </div> #}
    {% endif %}
</div>

{% block javascripts %}
{{ parent() }}
{# {{ encore_entry_script_tags('cart') }} #}
{% endblock %}
{% endblock %}