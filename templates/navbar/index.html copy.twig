{% block navbar %}
<div class="ui fixed borderless huge menu">
    <div class="ui grid">
        <div class="computer only row">
            <div class="left menu">
                <a href="{{ path('home') }}" class="item">Accueil</a>
                <a href="{{ path('list_user_type', {'role': 'ROLE_CLIENT', 'page' : '1' }) }}" class="item">Entrepreneurs</a>
                <a href="{{ path('list_user_type', {'role': 'ROLE_DEVELOPER', 'page' : '1'}) }}" class="item">Développeurs</a>

                <div class="ui fluid dropdown link item">
                    <span class="theme">
                        Thèmes
                        <i class="theme icon"></i>
                    </span>
                    <div class="menu">
                        {% for theme in get_navbar_data() %}
                        <div class="item">
                            <a href="{{ path('detail_theme', { 'id': theme.id }) }}">
                                <i class="dropdown icon"></i>
                                {{ theme.name }}
                            </a>
                            <div class="menu">
                                {% for category in theme.categories %}
                                <div class="item">
                                    <a href="{{ path('detail_category', { 'id': category.id }) }}">
                                        <i class="dropdown icon"></i>
                                        {{ category.name }}
                                    </a>
                                    <div class="menu">
                                        {% for course in category.courses %}
                                        <div class="item">
                                            <a href="{{ path('detail_course', { 'id': course.id }) }}">{{ course.name }}</a>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="right menu">
                {{ form_start(form_service, {'attr': {'action': path('search_results'), 'class': 'ajax-form'}}) }}
                <div class="ui category search">
                    <div class="ui icon input">
                        {{ form_widget(form_service.search_term) }}
                        <i class="search icon"></i>
                    </div>
                    <div class="results"></div>
                </div>
                <input type="hidden" name="submitted_form_type" value="form_search_navabar">
                {{ form_end(form_service) }}

                
                <a href="{{ path('search') }}" class="item">Avancées</a>
                {% if app.user %}
                <a href="{{ path('profile_edit', {'id': app.user.id}) }}" class="ui item">Bonjour {{ app.user.username }}</a>
                <a href="{{ path('logout') }}" class="ui item">Se déconnecter</a>
                {% else %}
                <a href="{{ path('login') }}" class="ui item">Se connecter</a>
                <a href="{{ path('register') }}" class="ui item">S'enregistrer</a>
                {% endif %}
                <a href="{{ path('cart_product') }}" class="ui item">
                    <i class="cart arrow down icon"></i>
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}" class="ui item">Tableau de bord</a>
                {% endif %}
            </div>
        </div>
        <!-- Mobile Nav -->
        <div class="tablet mobile only row" style="display: flex; align-items: center; justify-content: space-between;">
            <div class="header item">FiverrJR</div>
            <div class="right menu">
                <div class="item" style="margin-left: auto;">
                    <div class="ui basic icon toggle button burger-button">
                        <i class="content icon"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui vertical accordion borderless fluid menu">
            <!-- Start: Search -->
            <div class="item">
                <div class="ui icon input">
                    <input type="text" placeholder="Search...">
                    <i class="search link icon"></i>
                </div>
            </div>
            <!-- End: Search -->
            <a href="{{ path('home') }}" class="item">Accueil</a>
            <a href="{{ path('list_user_type', {'role': 'ROLE_CLIENT', 'page' : '1' }) }}" class="item">Entrepreneurs</a>
            <a href="{{ path('list_user_type', {'role': 'ROLE_DEVELOPER', 'page' : '1'}) }}" class="item">Développeurs</a>

            <div class="item">
                <div class="title">
                    Thèmes<i class="dropdown icon"></i>
                </div>
                <div class="content">
                    {% for theme in get_navbar_data() %}
                    <div class="item">
                        <div class="title">
                            <i class="dropdown icon"></i>
                            {{ theme.name }}
                        </div>
                        <div class="content">
                            {% for category in theme.categories %}
                            <div class="item">
                                <div class="title">
                                    <i class="dropdown icon"></i>
                                    {{ category.name }}
                                </div>
                                <div class="content">
                                    {% for course in category.courses %}
                                    <div class="item">
                                        <a href="{{ path('detail_course', { 'id': course.id }) }}">{{ course.name }}</a>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <div class="ui divider"></div>
            <a class="item" href="#">Default</a>
            <a class="item" href="#">Static top</a>
            <a class="active item" href="#">Fixed top</a>
        </div>
    </div>
</div>


<script>
document.addEventListener('DOMContentLoaded', function() {
    const dropdowns = document.querySelectorAll('.ui.dropdown');
    dropdowns.forEach(dropdown => {
        dropdown.dropdown();
        window.addEventListener('scroll', function() {
            if (dropdown.classList.contains('visible')) {
                dropdown.dropdown('hide');
            }
        });
    });
});
</script>



{% block js_navbar %}
{{ encore_entry_script_tags('jquery_ui_js') }}
{{ encore_entry_script_tags('semantic') }}
{{ encore_entry_script_tags('dropdown') }}
{{ encore_entry_script_tags('searchMotor') }}
{% endblock %}

{% endblock %}